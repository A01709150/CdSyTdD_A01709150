<%- include('./includes/head.ejs') %>

<h1 class="title">Video Juegos</h1>

<% if (juegos.length > 0) { %>
    <div class="columns">
        <% let columns = 0; %>
        <% for (let juego of juegos) { %>
            <% if (columns % 4 == 0) { %>
    </div>
    <div class="columns">
            <% } %>
            <% columns++; %>
            <div class="column">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="<%= juego.imagen %>" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="<%= juego.imagen %>" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4"><%= juego.juego %></p>
                            </div>
                        </div>
                    
                        <div class="content">
                            <%= juego.descripcion %> 
                            <br><br>
                            <p>Precio: </p>
                            <%= juego.precio %>

                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>No hay juegos registradas</h1>
<% } %>   

<%- include('./includes/foot.ejs') %>
